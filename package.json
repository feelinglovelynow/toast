    "test": "NODE_OPTIONS=--experimental-vm-modules pnpm jest"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "esbuild": "^0.19.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feelinglovelynow/toast.git"
  },
  "bugs": {
    "url": "https://github.com/feelinglovelynow/toast/issues"
  }
