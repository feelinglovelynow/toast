{
  "name": "@feelinglovelynow/toast",
  "version": "1.0.0",
  "license": "MIT",
  "author": "https://github.com/feelinglovelynow?tab=repositories",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "description": "Show a closeable success and/or info toast notification",
  "keywords": [
    "toast",
    "alert",
    "svelte",
    "sveltekit"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./index.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.27.2",
    "@sveltejs/package": "^2.2.2",
    "publint": "^0.2.5",
    "svelte": "^4.2.2",
    "svelte-check": "^3.5.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feelinglovelynow/toast.git"
  },
  "bugs": {
    "url": "https://github.com/feelinglovelynow/toast/issues"
  }
}
