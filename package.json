{
  "name": "@feelinglovelynow/toast",
  "version": "1.4.1",
  "description": "Show a closeable success or info toast notification",
  "author": "https://github.com/feelinglovelynow?tab=repositories",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.ts",
  "exports": {
    ".": "./dist/index.js",
    "./index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "tsc",
    "src"
  ],
  "keywords": [
    "toast",
    "alert",
    "svelte",
    "sveltekit"
